<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <ImageButton
        android:id="@+id/mainIcon"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_margin="15dp"
        android:src="@drawable/image_only"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:onClick="Clickhome"
         />

    <Button
        android:id="@+id/myPage_btn"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:layout_marginRight="15dp"
        android:onClick="ClickButton1"
        android:text="MY PAGE"
        android:textColor="#ffffff"
        app:backgroundTint="@color/purple_200"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/mainIcon" />

    <Button
        android:id="@+id/bulletin_btn"
        android:layout_width="90dp"
        android:layout_height="40dp"
        android:layout_marginTop="15dp"
        android:onClick="ClickButton2"
        android:text="게시판"
        android:textColor="#ffffff"
        app:backgroundTint="@color/purple_200"
        app:layout_constraintStart_toStartOf="@+id/mainIcon"
        app:layout_constraintTop_toBottomOf="@id/mainIcon" />

    <Button
        android:id="@+id/rr_btn"
        android:layout_width="90dp"
        android:layout_height="40dp"
        android:layout_marginLeft="15dp"
        android:text="룸메이트 추천"
        android:textColor="#ffffff"
        app:backgroundTint="@color/purple_200"
        app:layout_constraintStart_toEndOf="@+id/bulletin_btn"
        app:layout_constraintTop_toTopOf="@+id/bulletin_btn" />


    <TextView
        android:id="@+id/notice"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:gravity="center_vertical|center_horizontal"
        android:text="공지사항"
        android:textAlignment="center"
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="@+id/bulletin_btn"
        app:layout_constraintTop_toBottomOf="@+id/bulletin_btn"
        />

    <TextView
        android:id="@+id/todayMenu"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:gravity="center_vertical|center_horizontal"
        android:text="오늘의 식단"
        android:textAlignment="center"
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="@+id/notice_cont"
        app:layout_constraintTop_toBottomOf="@+id/notice_cont"
        />

    <TextView
        android:id="@+id/notice_cont"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_margin="10dp"
        android:layout_marginStart="12dp"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="@+id/notice"
        app:layout_constraintTop_toBottomOf="@+id/notice"
        />

    <TextView
        android:id="@+id/todayMenu_cont"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_margin="10dp"
        android:layout_marginStart="12dp"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="@+id/todayMenu"
        app:layout_constraintTop_toBottomOf="@+id/todayMenu"
        />

    <Button
        android:id="@+id/reserve"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="식단예약하러가기!!"
        app:backgroundTint="@color/purple_200"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.923" />

</androidx.constraintlayout.widget.ConstraintLayout>
